{
    "compilerOptions": {
        "baseUrl": ".",
        "allowJs": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "target": "ES5",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "types": ["node"],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "ES5",
            "DOM"
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.d.ts",
        "**/*.vue",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}